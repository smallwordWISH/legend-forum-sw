<% if current_user != user %>
  <% if current_user.is_friend?(user) %>
    <h4><span class="label label-primary label-lg glyphicon glyphicon-ok"> Friend</span></h4>
  <% elsif current_user.is_be_applying?(user) %>
    <div>
      <%= link_to friendships_path do %>
        <button class="btn btn-default btn-sm">Go to confirm</button>
      <% end %>
    </div>
  <% elsif current_user.is_applying?(user) %>
    <div>
      <%= link_to friendship_path(user), method: :delete, remote: true do%>
        <button class="btn btn-default btn-sm">Cancel applying</button>
      <% end %>
    </div>
  <% else %>
    <div>
      <%= link_to friendships_path(friend_id: user.id), method: :post, remote: true do %>
        <button class="btn btn-default btn-sm glyphicon glyphicon-plus">Add Friend</button>
      <% end %>
    </div>
  <% end %>
<% end %>