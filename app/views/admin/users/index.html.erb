<div class="container">
  <ul class="nav nav-tabs">
    <li role="presentation"><%= link_to 'Category List', admin_categories_path %></li>
    <li role="presentation" class="active"><%= link_to 'User List', admin_users_path %></li>
  </ul>
  <div>
    <table class="table table-bordered">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <%= form_for [:admin, user] do |f| %>
              <%= f.select :role, options_for_role %>
              <%= f.submit 'Update', class: "btn btn-primary btn-sm" %>
            <% end %> 
          </td>
        </tr>
      <% end %>
    </table>  
  </div>
</div>